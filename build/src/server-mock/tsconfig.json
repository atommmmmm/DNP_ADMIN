{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "types": ["node"]
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
}
